@import "../../utils/weui";

.zong {
    display: flex;
    flex-direction: column;
}
  /* .weui-tab__panel{
    display: flex;
    justify-content: space-between;
  } */
  .weui-navbar__item.weui-bar__item_on {
    color: #ff98be;
  }
  
  .weui-navbar__slider {
    background-color: #ff98be;
  }
  
  .item-text {
    box-sizing: border-box;
    width: 100%;
    height: 120rpx;
    padding: 16rpx 0;
    background: #fff;
    text-align: center;
    background: #eee;
    font-size: 24rpx;
  }
  /* .item-text > .img{
    height:13px;
    width: 13px;
    float: left;
    position: relative;
    top: 40rpx;
    left: 20rpx;
  } */
  .item-text.activity {
    position: relative;
    /* background: #aaffff; */
    color: #eea2a4 !important;
    border-color: #fe7ca9;
    border-top-left-radius: 30rpx;
    border-bottom-left-radius: 30rpx;
    background-color: #fff;
  }
  .item-text.activity::before {
    content: '';
    position: absolute;
    height: 20rpx;
    width: 20rpx;
    top: -20rpx;
    right: 0;
    border-bottom-right-radius: 20rpx;
    box-shadow: 5rpx 5rpx 0 1rpx #fff;
  }
  .item-text.activity::after {
    content: '';
    position: absolute;
    height: 20rpx;
    width: 20rpx;
    bottom: -20rpx;
    right: 0;
    border-top-right-radius: 20rpx;
    box-shadow: 5rpx -5rpx 0 5rpx #fff;
  }
  
  .navigation {
    width: 25%;
    height: 100%;
    /* top: 102rpx; */
    position: fixed;
    background-color: #eee;
  }
  .content{
    width: 74%;
    height: 100%;
    position: fixed;
    left: 26%;
  }
  .topimg{
    width: 100%;
  }
  .contentnext{
    width: 100%;
    display: flex;
       flex-wrap: wrap;
       justify-content: space-around;
    }
  .product{
    width: 45%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top:30rpx;
  }
  .productimg{
    width: 100%;
  
  }
  .product text{
    margin-top:15rpx;
    font-size: 26rpx;
  }
  ::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
  }
.commodity-list{
    display: flex;
    flex-wrap: wrap;
    border-left: 1rpx solid #efefef;
    border-top:1rpx solid #efefef;
}
.commodity-list image{
    width: 100%;
}
.commodity-item{
    /* width: 50%; */
    width: 258.75rpx;
    height: 300rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    padding: 10rpx;
}
.commodity-item text{
    font-size: small;
}