/* pages/login/login.wxss */
.bg::before {
  content: "";
  position: absolute;
  /* 左上角，即和父级元素重叠 */
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: radial-gradient(circle, #f6d365 0%, #fda085 100%);
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
  filter: blur(60px);
  z-index: -1;
}

.form {
  background-color: rgba(0, 0, 0, 0.1);
  width: 750rpx;
  border-radius: 50rpx;
  padding: 50rpx 0;
  transition: 0.5s;
  overflow: hidden;
}
.email-row {
  width: 100%;
  grid-template-columns: 3fr 1fr;
  overflow: hidden;
  margin-bottom: 36rpx;
}
.border{
  border: hotpink 1px solid;
  border-radius: 30rpx;
}

.input {
  background-color: transparent;
  width: 100%;
  height: 100rpx;
  text-align: left;
  padding: 0 70rpx;
  line-height: 100rpx;
  box-sizing: border-box;
}
.line-margin{
  margin-bottom: 36rpx;
}
.bg-orange{
  background-color: #fc5531;
}
.test{
  transition: 0.5s;
}
.redTest{
  background-color: hotpink;
  width: 300rpx;
  height: 300rpx;
}
.blueTest{
  background-color: blue;
  height: 100rpx;
  width: 100rpx;
}

.disappear{
  position: absolute;
  visibility: hidden;
  transform: translateX(100%);
}
.appear{
  position: static;
  visibility: visible;
  transform: translateX(0);
}